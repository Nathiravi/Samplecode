@model SignUp
@{
    ViewData["Title"] = "AdminLogin";
}

    
        <!-- Section: Design Block -->
<section class=" text-center text-lg-start" style="color: aqua;">
  <style>
    .rounded-t-5 {
      border-top-left-radius: 0.5rem;
      border-top-right-radius: 0.5rem;
    }

    @Model SignUp (min-width: 992px) {
      .rounded-tr-lg-0 {
        border-top-right-radius: 0;
      }

      .rounded-bl-lg-5 {
        border-bottom-left-radius: 0.5rem;
      }
    }
  </style>
  
  <body style="background-color:white;">
  <div class="card mb-3" style="color: rgb(18, 20, 20);" >
    <div class="row g-0 d-flex align-items-center" style="color: rgb(2, 2, 2);">
      <div class="col-lg-4 d-none d-lg-flex" style="color: rgb(18, 19, 19);">
        
      </div>
      <div class="col-lg-8" style="color: rgb(29, 31, 31);">
        <div class="card-body py-5 px-md-5" style="color: rgb(7, 7, 7);">

          <form method="post">
            <!-- Email input -->
            <img src="https://st2.depositphotos.com/4152719/8388/i/450/depositphotos_83881038-stock-photo-insurance-concept-image-with-business.jpg" alt="Trendy Pants and Shoes"
          class="w-100 rounded-t-5 rounded-tr-lg-0 rounded-bl-lg-5" />
            <h1>Login credentials for Admin</h1>
            <div class="form-outline mb-4" style="color: rgb(13, 14, 14);">
              <input asp-for="userid" id="form2Example1" class="form-control" required/>
              <label class="form-label" for="form2Example1">UserId</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
              <input asp-for="password" type="password" id="form2Example2" class="form-control" required/>
              <label class="form-label" for="form2Example2">Password</label>
            </div>

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
              <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
                  <label class="form-check-label" for="form2Example31"> Remember me </label>
                </div>
              </div>        
            </div>
            <div class="form-outline mb-4">
              <label class="form-label" >@ViewBag.Message</label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4" >Sign in</button>
            
          </form>
        
</body>
        </div>
      </div>
    </div>
  </div>
</section>
