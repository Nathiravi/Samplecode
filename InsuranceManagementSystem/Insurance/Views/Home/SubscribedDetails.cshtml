@model IEnumerable<Policy>
@{
    ViewData["Title"]="List";
    Layout="_AdminLayout";
}
<style>
    th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(27, 60, 123);
        border-radius: 7%;
        color:rgb(100, 141, 218);
    }
    label{
        margin-left: 380px;
        margin-top: 10px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
    table{
        margin-left: 100px;
        margin-top: 2px;
        min-width: 900px;
        max-width: 900px;

    }
</style>
<body background="https://i.pinimg.com/736x/87/df/5c/87df5cfae6807d30f659ae8c479a9d48.jpg" >

<label style="color: rgb(100, 141, 218);">Subscribed Policy</label>
<table border=3 class="table table-striped table-hover">
    <thead>
        <tr>
          <th>Policy ID</th>
          <th>Name</th>
          <th>User ID</th>
          <th>Age</th>
          <th>Policy Type</th>
          <th>Claim Amount</th>
          <th>Policy Duration</th>
          <th>Policy Date</th>
          </tr>
    </thead>
    <tbody>
        @foreach(Policy policy in Model){
            <tr>
                <td>@policy.PolicyID</td>
                <td>@policy.Name</td>
                <td>@policy.Userid</td>
                <td>@policy.Age</td>
                 <td>@policy.Type</td>
                <td>@policy.ClaimAmount</td>
                <td>@policy.PolicyDuration</td>
                <td>@policy.PolicyDate</td>
                
                
            </tr>
        }
    </tbody>
</table>
</body>
