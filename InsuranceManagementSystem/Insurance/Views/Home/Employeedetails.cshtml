@model IEnumerable<Add>
@{
    ViewData["Title"]="List";
    Layout="_AdminLayout";
}
<style>
    th,td{
        padding: 10px;
        text-align: center;
    }
    button{
        border:none ;
        background-color: rgb(27, 60, 123);
        border-radius: 7%;
        color:rgb(100, 141, 218);
    }
    label{
        margin-left: 380px;
        margin-top: 10px;
        width: 400px;
        font-weight: bold;
        font-size: xx-large
    }
    table{
        margin-left: 100px;
        margin-top: 2px;
        min-width: 900px;
        max-width: 900px;

    }
</style>
<body background="https://i.pinimg.com/736x/87/df/5c/87df5cfae6807d30f659ae8c479a9d48.jpg" >

<label style="color: rgb(100, 141, 218);">Employee Details</label>
<table border=3 class="table table-striped table-hover">
    <thead>
        <tr>
          
          <th>Name</th>
          <th>User ID</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Role</th>
          <th>Phone Number</th>
          <th>City</th>
          <th></th>
          <th></th>
  
        </tr>
    </thead>
    <tbody>
        @foreach(Add user in Model){
            <tr>
                
                <td>@user.Name</td>
                <td>@user.Userid</td>
                <td>@user.Age</td>
                 <td>@user.Gender</td>
                <td>@user.Role</td>
                <td>@user.PhoneNumber</td>
                <td>@user.city</td>
                
                <td><form method="post" asp-controller="Home" asp-action="Delete"  asp-route-Userid="@user.Userid">
                <button type="submit">Delete</button>
                </form></td>
                <td>
                <form method="post" asp-controller="Home"  asp-action="Employeedetails" asp-route-Userid="@user.Userid">
                <button type="submit">Update</button>
                </form></td> 
            </tr>
        }
    </tbody>
</table>
</body>
