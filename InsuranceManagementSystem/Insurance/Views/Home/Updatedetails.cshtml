@model Add
@{
    Layout="_AdminLayout";
    ViewData["Title"] = "Addemployees";
}
<head>
    <Style>
        label{
            width: 9em;
            font-weight: bold;
            margin-left:-10%;
            margin-top:10%;
            height:2em;
            color:rgb(27, 60, 123);       
        }
        input{
            margin-left:-15%;
            margin-top:10%;
            height: 2em;
        }
        button{
            margin-top: 30px;
            width: 4em;
            margin-left: 80px;
             border:none ;
             background-color: rgb(100, 141, 218);
             border-radius: 7%;
        }
        .radio1{
            margin-left:20px;
            margin-top: 5px;

        }
        .radio2{
            margin-left:-50px;
           
        }
