@model Policy
@{
    ViewData["Title"] = "ApplyPolicy";
    Layout="_EmployeeLayout";
} 
  
 <body background="https://i.pinimg.com/736x/87/df/5c/87df5cfae6807d30f659ae8c479a9d48.jpg" style="background-size: cover"  >
   <section class="h-100" style="width:1100px">  
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <img src="https://st2.depositphotos.com/4152719/8388/i/450/depositphotos_83881038-stock-photo-insurance-concept-image-with-business.jpg"
            class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
            alt="Sample photo">
          <div class="card-body p-4 p-md-5">
            <h3 style="color:rgb(100, 141, 218)" class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Register here for Health Insurance</h3>
            <form method="post">
              
              <div class="row">
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" >Name</label>
                    <input asp-for="Name" type="text" class="form-control form-control-lg"  required/>
                  </div>

                </div>
                <div class="col-md-6 mb-4">

                  <div class="form-outline">
                    <label class="form-label" >User ID</label>
                    <input type="text" asp-for="Userid" class="form-control form-control-lg" readonly/>
                    
                  </div>

                </div>
              </div>

              <div class="row">
                    <div class="col-md-6 mb-4">
                  <div class="form-outline ">
                  <label class="form-label select-label">Policy for &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                  <select asp-for="Type" class="select form-control-lg">
                    <option value="Individual" >Individual</option>
                    <option value="Family">Family</option>
                    <option value="Group">Group</option>
                    <option value="Maternity">Maternity</option>
                  </select>
                    </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <label class="form-label" >Age</label>
                    <input type="number" asp-for="Age" class="form-control form-control-lg" required/>
                    
                  </div>
                  </div>
                </div>
                <div class="row">
                         <div class="col-md-6 mb-4">
                  <div class="form-outline ">
                  <label class="form-label select-label">Claim Amount &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                  <select asp-for="ClaimAmount" class="select form-control-lg">
                    <option value="2 Crore" >2 Crore</option>
                    <option value="1 Crore">1 Crore</option>
                    <option value="50 Lakhs">50 Lakhs</option>
                    <option value="25 Lakhs">25 Lakhs</option>
                    <option value="10 Lakhs">10 Lakhs</option>
                    <option value="5 Lakhs">5 Lakhs</option>
                  </select>
                    </div>
                </div>
                  <div class="col-md-6 mb-4">
                  <div class="form-outline ">
                    <label  class="form-label">Policy Name </label>
                    <input type="text" asp-for="PolicyName" class="form-control form-control-lg" value="Health Insurance" readonly />
                    
                  </div>
                </div>
           
                </div>
                <div class="row">
                    <div class="col-md-6 mb-4">
                  <div class="form-outline ">   
                <label class="form-label select-label" >Policy Duration &nbsp;&nbsp;&nbsp;&nbsp; </label>  
                 <select asp-for="PolicyDuration"  class="select form-control-lg">
                  <option value="30 Years">30 Years</option>
                  <option value="25 Years">25 Years</option>
                  <option value="20 Years">20 Years</option>
                  <option value="15 Years">15 Years</option>
                  <option value="10 Years">10 Years</option>
                 </select>
                  </div>
                </div>
                <div class="col-md-6 mb-4">
                  <div class="form-outline ">
                    <label  class="form-label">Policy Date </label>
                    <input type="date" asp-format="{0:yyyy-MM-dd}" asp-for="PolicyDate" class="form-control form-control-lg" placeholder="Today Date" required/>
                    
                  </div>
                </div>
                </div>
            <div class="row" style=margin-left:25%>
        
             <p>  <button style="margin-right: 50%;margin-left:30px;padding:5px 20px;" type="submit"> Submit </button>
            
                
             </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
.gradient-custom {
/* fallback for old browsers */
background: rgb(248, 235, 248);

/* Chrome 10-25, Safari 5.1-6 */
background: rgb(248, 235, 248);

/* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
background:  rgb(248, 235, 248);
}
 .card-registration  
.select-input.form-control[readonly]:not([disabled]) {

line-height: 2.15;
padding-left: .75em;
padding-right: .75em;
}
.card-registration .select-arrow {
top: 10px;
}
button{
            margin-top: 30px;
            width: 8em;
            margin-left: 80px;
             border:none ;
             color:rgb(27, 60, 123);
             border-radius: 7%;
             background-color: rgb(100, 141, 218);
        }
        label{
          color:rgb(27, 60, 123);
        }
</style>
</body> 


             